<script>
$(document).ready( function(event) {
	$('.login-button').click( function() {
		console.log('in login trigger');
		$('.login-form').trigger('submit');
	});
	
	$('.login-form input').focus( function() {
		$(this).keyup( function(event) {
			if (event.which == 13) {
				$('.login-form').trigger('submit');
			}
		})
	});
	
	
	$('.signup-button').click( function() {
		console.log('in sign up trigger');
		$('.signup-form').trigger('submit');
	});
	
	$('.trial-button').click( function(event) {
		$(event.currentTarget).find('form').trigger('submit');
	})
	
	$('.flash-message').delay(1500).fadeOut("slow");
	
});

</script>

<div class="login-container">
	
	<% if flash[:notice] %>
	<div class="flash-message notice"><span><%= flash[:notice]%></span></div>
	<% end%>
	<% if flash[:error] %>
	<div class="flash-message error"><span><%= flash[:error]%></span></div>
	<% end%>
	
	<div class="overhang">Because owning up to a bet shows more character than winning</div>
	<section class="graphic">
		<div class="login-pic group"><%= image_tag("index/polaroid-compressed.png") %></div>
		<div class="graphic-content">
			<div class="content-title">Welcome to <span>Yibs</span></div>
			<div class="content-support">An app to facilitate social bets with your friends.  Issue challenges, talk some smack, and document results.  Share yours bets for others to see and weigh in!</div>
		</div>
	</section>
	<section class="login-section">
		<form class="login-form" action="<%= session_url %>" method="post">
		  <input
		     name="authenticity_token"
		     type="hidden"
		     value="<%= form_authenticity_token %>">

		  <label for="user_username"></label>
		  <input
		     id="user_username"
		     name="user[username]"
		     type="text"
			 placeholder="Email">

		  <label for="user_password"></label>
		  <input
		     id="user_password"
		     name="user[password]"
		     type="password"
			 placeholder="Password">

		  <input class="hidden" type="submit" value="Log in">
		  <div class="login-button">Log In</div>
		</form>
		<span class="login-seperator">or</span>
		<div class="fb-login"><a href="/auth/facebook"><%= image_tag("index/login_with_facebook-150px.png") %></a></div>
	</section>

	<section class="signup-section">
		<div class="signup-title">Create an Account</div>
		<form class="signup-form" action="<%= users_url %>" enctype="multipart/form-data" method="post">
		  <input
		     name="authenticity_token"
		     type="hidden"
		     value="<%= form_authenticity_token %>">

		  <label for="user_first_name"></label>
		  <input
		    id="user_first_name"
		    name="user[first_name]"
		    type="text"
			placeholder="First Name">
		  <br>

		  <label for="user_last_name"></label>
		  <input
		    id="user_last_name"
		    name="user[last_name]"
		    type="text"
			placeholder="Last Name">
		  <br>

		  <label for="user_username"></label>
		  <input
		     id="user_username"
		     name="user[username]"
		     type="text"
			 placeholder="Email">
			 
	     <label for="user_password"></label>
	     <input
	        id="user_password"
	        name="user[password]"
	        type="password"
			placeholder="Password">
		 <div class="signup-button">Sign Up</div>
		 <input class="hidden" type="submit" value="Sign Up">
		 </form>
	 </section>
	 
	 <section class="trial-section">
		 <header>Click here to sign in to a sample account</header>
		 <div class="arrow-pic"><%= image_tag("index/white-arrow.png") %></div>
		 <div class="trial-button">Try it out!
	 		<form class="trial-form hidden" action="<%= session_url %>" method="post">
	 		  <input
	 		     name="authenticity_token"
	 		     type="hidden"
	 		     value="<%= form_authenticity_token %>">

	 		  <label for="user_username"></label>
	 		  <input
	 		     id="user_username"
	 		     name="user[username]"
					 value="marshmallow@fakemail.com"
	 		     type="text"
	 			 placeholder="Email">

	 		  <label for="user_password"></label>
	 		  <input
	 		     id="user_password"
	 		     name="user[password]"
	 		     type="password"
					 value="123456"
	 			 placeholder="Password">

	 		  <input class="hidden" type="submit" value="Log in">
	 		  <div class="login-button">Log In</div>
	 		</form>
				 
		 </div>
	 </section>
 
 </div>
 