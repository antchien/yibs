<br>
<br>
<%= bet.author.abbrev_name %>. bets:
  <br>
  <% bet.participations.each do |participation| %>
    <% unless participation.participant == bet.author %>
    <%= participation.participant.first_name %> <%= participation.participant.last_name %> (<%= participation.status %>)
    <br>
    <% end %>
    <% end %>
    <br>
    that <%= bet.terms %>
  <br>
  Loser(s) has to <%= bet.wager %>
  <br>
  <br>
  This bet is <%= bet.private ? "Private" : "Public" %> <br>
  <% if bet.participants.include?(current_user) %>
  	<%= link_to "Edit Bet", edit_bet_url(bet) %>
  <br>
  <% end %>
  <% if current_user.inbound_pending_bets.include?(bet) %>
    <%= render "/bets/accept_button", :bet => bet %> <%= render "/bets/decline_button", :bet => bet %>
    <br>
    <% end %>
    Comments:<br>
    <%= render "/comments/expanded_comments_form", :bet => bet%>
