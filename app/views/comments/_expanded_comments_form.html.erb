<ul>
<% bet.comments.each do |comment| %>
<li>
<%= comment.author.first_name %> <%= comment.author.last_name[0] %>: <br>
<%= comment.text %><br>
</li>
<% end %>
</ul>

<form action="<%= bet_comments_url(bet.id) %>" method="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <textarea name="comment[text]">add some text here</textarea>

  <input type="submit" value="Add Comment">
</form>
